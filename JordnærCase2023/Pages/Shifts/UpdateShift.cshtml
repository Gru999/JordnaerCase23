@page
@model JordnærCase2023.Pages.Shifts.UpdateModel
@{
    ViewData["Title"] = "Update Shift";
}

<h1>Update Shift</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.ShiftID" class="control-label"></label>
                <input asp-for="@Model.ShiftUpdate.ShiftID" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.MemberID" class="control-label"></label>
                <input asp-for="@Model.ShiftUpdate.MemberID" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.ShiftType" class="control-label"></label>
                <input asp-for="@Model.ShiftUpdate.ShiftType" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.DateFrom" class="control-label"></label>
                <input asp-for="@Model.ShiftUpdate.DateFrom" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.ShiftUpdate.DateTo" class="control-label"></label>
                <input asp-for="@Model.ShiftUpdate.DateTo" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" /> 
                <button type="button" class="btn btn-primary" onclick="window.history.back();">Back</button>
            </div>
        </form>
    </div>
</div>